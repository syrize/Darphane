<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorBanner"

    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_large">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large">

        <ImageView
            android:id="@+id/dialog_kahve"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@android:color/transparent"
            android:tint="@color/green_A400"
            android:src="@drawable/ic_local_cafe" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="1dp"
            />
        <ImageView
            android:id="@+id/dialog_tarot"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@android:color/transparent"
            android:tint="@color/red_A200"
            android:src="@drawable/ic_tarot" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="1dp"
            />
        <ImageView
            android:id="@+id/dialog_el"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:background="@android:color/transparent"
            android:tint="@color/orange_A200"
            android:src="@drawable/ic_el" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_large">

            <ImageView
                android:id="@+id/dialog_yuz"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@android:color/transparent"
                android:tint="@color/brown_300"
                android:src="@drawable/ic_face" />
            <TextView
                android:layout_width="30dp"
                android:layout_height="1dp"
                />
            <ImageView
                android:id="@+id/dialog_ruya"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/spacing_medium"
                android:background="@android:color/transparent"
                android:tint="@color/purple_A200"
                android:src="@drawable/ic_ruya" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>