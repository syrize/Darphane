<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/RippleStyleBlack"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_chip_view"
        android:paddingBottom="@dimen/spacing_large"
        android:paddingTop="@dimen/spacing_large"
        android:layout_margin="5dp"
        android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lyt_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"

        >

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <RelativeLayout
                    android:id="@+id/lyt_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.mikhaellopez.circularimageview.CircularImageView
                        android:id="@+id/kredi_resim"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        app:civ_border="true"
                        app:civ_shadow="true"
                        app:civ_shadow_radius="0"
                        app:civ_border_color="@color/purple_500"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/image_letter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@android:color/white" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>


        <View
            android:layout_width="@dimen/spacing_smlarge"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/paket_adi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="Paket Adı"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/aciklama"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:maxLines="4"
                        android:singleLine="false"
                        android:text="Açıklama"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="@color/grey_90"
                         />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />
    </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/spacing_large" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1">


            <LinearLayout
            android:id="@+id/krediyle_satinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="left"
            android:layout_weight="0.5">
                    <View
                        android:layout_width="@dimen/spacing_large"
                        android:layout_height="0dp" />
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:clickable="true"
                        android:clipToPadding="true"
                        android:background="@drawable/yuvarlanmis_kirmizi"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/kredi_tutari"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="10"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/quantum_black_100"
                            android:textSize="22dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="@dimen/spacing_medium"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="K"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/quantum_black_100"
                            android:textSize="22dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                    <TextView
                        android:id="@+id/paket_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />
                    <TextView
                        android:id="@+id/adsense_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />
                    <TextView
                        android:id="@+id/kullanici_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:visibility="invisible" />
            </LinearLayout>


            <LinearLayout
            android:id="@+id/parayla_satinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="right"
            android:layout_weight="0.5">
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:clickable="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:clipToPadding="true"
                        android:background="@drawable/yuvarlanmis_mavi"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/ucret"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="10"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/quantum_black_100"
                            android:textSize="22dp"
                            android:textStyle="bold" />
                        <View
                            android:layout_width="@dimen/spacing_medium"
                            android:layout_height="0dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="TL"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textColor="@color/quantum_black_100"
                            android:textSize="22dp"
                            android:textStyle="bold" />


                    </LinearLayout>
                <View
                    android:layout_width="@dimen/spacing_large"
                    android:layout_height="0dp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</com.balysv.materialripple.MaterialRippleLayout>