<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_small"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/spacing_xlarge">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">


            <TextView
                android:id="@+id/oyunsonu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:text="Oyunu Kaybettiniz!"
                android:textColor="@color/red_600"
                android:textSize="@dimen/spacing_mxlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/kazanilankredi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="10sp"
                android:paddingTop="@dimen/spacing_medium"
                android:text=""
                android:textColor="@color/red_600"
                android:textSize="@dimen/spacing_xlarge"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
        android:id="@+id/reklam_izle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_medium">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/spacing_medium"
            android:src="@drawable/galery1" />
           <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/spacing_large">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Ä°zle Kazan"
                   android:textColor="@color/indigo_600"
                   android:textSize="18dp"
                   android:textStyle="bold" />

               <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                >

               <TextView
                   android:id="@+id/reklam_izle_kredisi"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text=""
                   android:textColor="@color/indigo_600"
                   android:textSize="22dp"
                   android:textStyle="bold" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Kredi"
                   android:textColor="@color/indigo_600"
                   android:textSize="22dp"
                   android:textStyle="bold"
                   android:padding="@dimen/spacing_small"/>
               </LinearLayout>
           </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:paddingTop="@dimen/spacing_xlarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
>
        <Button
            android:id="@+id/yeni_oyun"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="23dp"
            android:text="Tekrar Oyna"
            android:theme="@style/Button.Baslat" />
    <ImageView
        android:id="@+id/home"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/spacing_medium"

        android:src="@drawable/home3" />

</LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>